# Personal shortcuts
alias e='nvim'

# Favorite directories
alias o="open ."
alias D="open ~/Downloads"

# enable color support for commands
if [ -x /usr/bin/dircolors ]; then
   test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
   alias ls='ls --color=auto'
   alias dir='dir --color=auto'
   alias vdir='vdir --color=auto'

   alias grep='grep --color=auto'
   alias fgrep='fgrep --color=auto'
   alias egrep='egrep --color=auto'
fi

# ls
alias ls="ls -G"
alias lh="ls -lh"
alias ll="ls -alF"
alias la="ls -A"

# cd related
alias ..=" cd .."
alias cd..=" cd .."

# git
alias g=" git status -sb"
alias gh="git hist"
alias gb="git branch"
alias gd="git diff --color"
alias gdw="git diff --color-words"
alias gco="git checkout"
alias gc-="git checkout --"
alias ghub="command gh"
alias gup="git up"

alias ga="git add"
alias gcm="git commit -m"
alias gca="git commit --amend"
alias gcam="git commit -am"
alias gpus="git push"
alias gpul="git pull"
alias gsa="git stash"
alias gitmod="git ls-files -m"

# Github
alias prd="ghub pr list -A dheerosaur"
alias pran="ghub pr list -A adybionka"

# python aliases
alias pyserver="python3 -m http.server"
alias sitepack="cdsitepackages"  # from virtualenvwrapper

#django
alias dj="python manage.py"
alias djr="dj runserver"
alias djsh="dj shell"
alias djshp="dj shell_plus"
alias djdb="dj dbshell"

# Shortcuts for web services
alias myip="curl -s icanhazip.com | pbcopy"

# find
function mkpy {
   mkdir $1 && touch $1/__init__.py
}

alias lct=fd

function mcd() {
   mkdir $1 && cd $1;
}

function ggd() {
    git diff `gd --name-status --relative | grep ^M | awk '{ print $2 }' | grep -i $1`
}

function gga() {
    git add `gd --name-status --relative | grep ^M | awk '{ print $2 }' | grep -i $1`
}

function ggco() {
    git checkout `git branch | grep $1 | head -n 1`;
}

function init_python() {
    eval "$(pyenv init -)"
    eval "$(pyenv virtualenv-init -)"
    export PYENV_VIRTUALENVWRAPPER_PREFER_PYVENV="true"
    export WORKON_HOME=~/.virtualenvs
    pyenv virtualenvwrapper_lazy
}

