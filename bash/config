export EDITOR='nvim'
export VISUAL='nvim'

# define tool-specific settings
LS_OPTIONS='--color=yes'

#History settings
HISTSIZE=1000
# shopt -s histappend
HISTFILESIZE=409600

#Ignore common commands
HISTIGNORE="z:e:pwd:id:uptime:resize:ls:clear:history:exit:g"
#Ignore duplicate entries
HISTCONTROL=ignoreboth:erasedups

# If not running interactively, don't do anything
[ -z "$PS1" ] && return

TERM=xterm-256color
force_color_prompt=yes

# PS1='$(__git_ps1 "[%s] ")\W \$ '

########### Python ##################

# virtualenvwrapper
export PATH=$(pyenv root)/shims:~/bin/:/usr/local/bin:$PATH
export PIP_DOWNLOAD_CACHE=~/.pip/cache

export PYENV_VIRTUALENVWRAPPER_PREFER_PYVENV="true"
export WORKON_HOME=$HOME/.virtualenvs
export PROJECT_HOME=~/work

eval "$(pyenv init - )"
pyenv virtualenvwrapper_lazy

[ -s "$HOME/.pythonstartup" ] && export PYTHONSTARTUP=$HOME/.pythonstartup
